<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AlienUniverseDatabase.ViewModels"
        x:Class="AlienUniverseDatabase.Views.HeroesWindow"
        x:DataType="vm:HeroesViewModel"
        Width="600" Height="600"
        Title="Bohaterowie">

    <ListBox ItemsSource="{Binding Bohaterowie}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Margin="10" Spacing="3">

                    <TextBlock>
                        <Run Text="Imię i nazwisko: " FontWeight="Bold"/>
                        <Run Text="{Binding ImieNazwisko}"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Rola: " FontWeight="Bold"/>
                        <Run Text="{Binding Rola}"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Aktor: " FontWeight="Bold"/>
                        <Run Text="{Binding Aktor}"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Rasa / Gatunek: " FontWeight="Bold"/>
                        <Run Text="{Binding Rasa}"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Funkcja w załodze: " FontWeight="Bold"/>
                        <Run Text="{Binding Funkcja}"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Charakterystyka: " FontWeight="Bold"/>
                        <Run Text="{Binding Charakterystyka}"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Los: " FontWeight="Bold"/>
                        <Run Text="{Binding Los}"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Ciekawostka: " FontWeight="Bold"/>
                        <Run Text="{Binding Ciekawostka}"/>
                    </TextBlock>

                    <Separator Margin="0 10 0 10"/>
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>

</Window>
